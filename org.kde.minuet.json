{
    "id": "org.kde.minuet",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.10",
    "sdk": "org.kde.Sdk",
    "command": "minuet",
    "rename-icon": "minuet",
    "cleanup": [
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/share/doc",
        "/share/man"
    ],
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--socket=wayland"
    ],
    "modules": [
        {
            "name": "fluidsynth",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/FluidSynth/fluidsynth/archive/refs/tags/v2.5.2.tar.gz",
                    "sha256": "1dcb13308b3aa383db658c60a7b63d73d0ff4601ccee589582ba7a816475410e",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 10437,
                        "stable-only": true,
                        "url-template": "https://github.com/FluidSynth/fluidsynth/archive/refs/tags/v$version.tar.gz"
                    }
                }
            ],
            "modules": [
                {
                    "name": "gcem",
                    "buildsystem": "cmake-ninja",
                    "config-opts": [
                        "-DCMAKE_POLICY_VERSION_MINIMUM=3.5"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/kthohr/gcem/archive/refs/tags/v1.18.0.tar.gz",
                            "sha256": "8e71a9f5b62956da6c409dda44b483f98c4a98ae72184f3aa4659ae5b3462e61"
                        }
                    ]
                }
            ]
        },
        {
            "name": "minuet",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_WITH_QT6=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/25.12.2/src/minuet-25.12.2.tar.xz",
                    "sha256": "0eea2271f8233beb666be379c924937a45cfa39783f633eb5718304202c2939f",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/minuet-$version.tar.xz"
                    }
                },
                {
                    "type": "patch",
                    "path": "mr-37.patch"
                }
            ]
        }
    ]
}
